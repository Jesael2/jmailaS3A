<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jmailaS3A.Views.lista1"
             Title="lista1">
    <ContentPage.Resources>
        <Style x:Key="estiloLabel" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="Blue"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
    </ContentPage.Resources>
    
    
    <VerticalStackLayout
        Spacing="20"
        Padding="20">
        <Label 
            Style="{StaticResource estiloLabel}"
            Text="INICIO DE SESION"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="descarga.png"
               WidthRequest="200"/>

        <!--TABLA-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label 
                   Style="{StaticResource estiloLabel}"
                   Text="USUARIO"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0"/>
            <Entry x:Name="txtUsuario"
                   Placeholder="Ingrese el usuario"
                   Grid.Row="0"
                   Grid.Column="1"/>
            <Label 
                   Style="{StaticResource estiloLabel}" 
                   Text="CONTRASEÃ‘A"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <Entry x:Name="txtContrasena"
                   Placeholder="Ingrese la contrasena"
                   IsPassword="False"
                   Grid.Row="1"
                   Grid.Column="1"/>
        </Grid>
        <Button x:Name="btnIniciarSesion"
                Text="Iniciar Sesion"
                Clicked="btnIniciarSesion_Clicked"/>
        <Button x:Name="btnRegistrar"
                Text="Registrar"
                Clicked="btnRegistrar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>